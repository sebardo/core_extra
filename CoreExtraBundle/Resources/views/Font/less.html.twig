{% extends "AdminBundle:Base:layout.html.twig" %}

{% block section %}fontless{% endblock %}

{% block content %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        {{ "font.less" | trans }}
        <small></small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="{{ path('admin_default_index') }}"> <i class="ion-home"></i>  {{ "home" | trans }}</a></li>
        <li><a href="javascript:">{{ "dashboard" | trans }}</a></li>
        <li><a href="javascript:">{{ "fonts" | trans }}</a></li>
        <li><a href="{{ path('coreextra_font_index') }}">{{ "font.less" | trans }}</a></li>
      </ol>
    </section>
      
    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
            
          {% include 'CoreBundle:Base:alert.messages.html.twig' %}
        
          
          <div class="box">
            <div class="box-body">
                <!-- form start -->
                {{ form_start(form, {
                                    'action': path('coreextra_font_less'), 
                                    'method': 'post', 
                                    'attr': {'class': 'form-horizontal form-row-seperated'}
                                    }) }}
                    <div class="box-body">
                        {{ form_errors(form) }}
                        
                        <div class="alert alert-info">
                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                            <strong>Remember!</strong><br> "{{path}}" forlder  should be have "www-data" user group and "775" permissions.
                            <div class="help">Please for more information about all variables follow the link <a href="https://github.com/twbs/bootstrap/blob/master/less/variables.less" target="_blank">https://github.com/twbs/bootstrap/blob/master/less/variables.less</a></div>
                        </div>
                        {{ form_widget(form.vars, { attr: {'class':'form-control', 'rows': '10' } }) }}
                        {{ form_rest(form) }}
                    </div><!-- /.box-body -->
                    <div class="box-footer">
                         <div class="col-sm-12">
                            <button type="submit" class="btn btn-primary btn-flat"><i class="ion-checkmark"></i> {{ "save" | trans }}</button>
                        </div>
                    </div>
                {{ form_end(form) }}

            </div>
          </div>
        </div>
      </div>
    </section>
  
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        

        jQuery(document).ready(function() {

             
        });
    </script>
{% endblock %}