{% extends "AdminBundle:Base:layout.html.twig" %}

{% block section %}menuitems{% endblock %}

{% block content %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        {{ "menu.plural" | trans }}
        <small></small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="{{ path('admin_default_index') }}"> <i class="ion-home"></i>  {{ "home" | trans }}</a></li>
        <li><a href="javascript:">{{ "dashboard" | trans }}</a></li>
        <li><a href="{{ path('core_menuitem_index') }}">{{ "menu.plural" | trans }}</a></li>
      </ol>
    </section>
      
    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
            
            {% include 'CoreBundle:Base:alert.messages.html.twig' %}
            
          <div class="box">
            <div class="box-body">
                <div class="clearfix">
                    <div class="btn-group">
                        <a href="{{ path('core_menuitem_new') }}" class="btn btn-success btn-flat">
                                {{ "add.new" | trans }} <i class="ion-plus"></i>
                        </a>
                         <a href="{{ path('core_menuitem_sort') }}" class="btn btn-info btn-flat">
                            {{ "menu.sort" | trans }} <i class="ion-loop"></i>
                        </a>
                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover" id="menuitems-table">
                    <thead>
                    <tr>
                        <th class="hidden-480">ID</th>
                        <th class="hidden-480">{{ "name" | trans }}</th>
                        {#<th class="hidden-480">{{ "family.singular" | trans }}</th>#}
                        
                        {% if not app.user.isGranted('ROLE_OPTIC')%}
                            <th class="hidden-480">{{ "order.sort" | trans }}</th>
                            <th style="width:50px;" class="hidden-480">{{ "active" | trans }}</th>
                        {% endif %}
            
                        
                        <th style="width:180px;"></th>
                    </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
              </div>
          </div>
        </div>
      </div>
    </section>
  
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        var table_columns = [
            { "mData": "id" },
            {
                "mData": function (source) {
                    return '<a href="' + source.id + '">' + source.name + '</a>';
                }
            },
            { "mData": "order" },
            {
                "mData": "active",
                "mRender": function(data) {
                    var code = '';

                    if (true == data) {
                        code = '<span class="label label-success">{{ "yes" | trans }}</span>';
                    } else {
                        code = '<span class="label label-danger">{{ "no" | trans }}</span>';
                    }

                    return code;
                }
            }, 
            {
                "mData": function(source) {
                    return '<a href="' + source.id + '/submenuitems/" class="btn btn-info btn-xs btn-flat"><i class="ion-compose"></i> {{ "subitems.plural" | trans }}</a> ' +
                            '<a href="' + source.id + '/edit" class="btn btn-primary btn-xs btn-flat"><i class="ion-compose"></i> {{ "edit.singular" | trans }}</a> ';
                }
            }
        ];

        jQuery(document).ready(function() {

            TableManaged.init(
                '#menuitems-table',
                '{{ url('core_menuitem_listjson') }}',
                [],
                table_columns,
                '{{ url('admin_default_getdatatablesi18n', { language: app.request.locale }) }}');
  
        });
    </script>
{% endblock %}