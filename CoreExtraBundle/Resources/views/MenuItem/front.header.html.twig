{% set items = get_menu_items() %}
{% for item in items %}
    <a class="fa fa-{{item.icon}} header-item" href="{{ path('core_menuitem_menu', {slug: item.slug} ) }}"><span>{{item.name}}</span></a>
    {% if item.subitems | length > 0 %}<ul class="" >{% endif %}
    {% for sub in item.subitems %}
            <a href="/{{sub.slug}}" style="display: block;">{{item.name}}</a>
    {% endfor %}
    {% if item.subitems | length > 0 %}</ul>{% endif %}        
{% endfor %}

