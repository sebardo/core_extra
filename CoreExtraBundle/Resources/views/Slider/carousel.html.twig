<!-- Half Page Image Background Carousel Header -->
<div id="myCarousel" class="carousel slide">
    
    {% set items = get_slider_items() %}
     <!-- Indicators -->
    {% if items|length > 1%}
    <ol class="carousel-indicators">
        {% for item in items %}
            <li data-target="#myCarousel" data-slide-to="{{loop.index-1}}" class="{% if loop.first %}active{% endif %}"></li>
        {% endfor %}
    </ol>
    {% endif %}
    <!-- Wrapper for Slides -->
    <div class="carousel-inner">
        {% for item in items %}
        <div class="item {% if loop.first %}active{% endif %}">
            <!-- Set the first background image using inline CSS below. -->
            {% if item.url != '' %}<a {% if item.openInNewWindow %}target="_blank"{% endif %} href="{{item.url}}">{% endif %}
            <div class="fill" style="background-image:url('/uploads/images/{{item.image}}');"></div>
            {% if item.url != '' %}</a>{% endif %}
            {% if item.title != '' and item.caption != ''%}
                <div class="carousel-caption">
                    <h2>{{item.title | raw }}</h2>
                    <p>{{item.caption | raw }}</p>
                    <div class="link">
                        <a style="display: none" class="btn-core" href="{{ item.url }}">Ver mas</a>
                    </div>
                </div>
            {% endif%}
        </div>
        {% endfor %}
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="icon-prev"></span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="icon-next"></span>
    </a>

</div>