{% extends "AdminBundle:Base:layout.html.twig" %}

{% block section %}sliders{% endblock %}

{% block content %}
    
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        {{ "slider.plural" | trans }}
        <small></small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="{{ path('admin_default_index') }}"> <i class="ion-home"></i>  {{ "home" | trans }}</a></li>
        <li><a href="{{ path('coreextra_slider_index') }}">{{ "slider.plural" | trans }}</a></li>
      </ol>
    </section>
 
    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
            
          {% include 'CoreBundle:Base:alert.messages.html.twig' %}
            
          <div class="box">
            <div class="box-body">
                <div class="clearfix">
                    <div class="btn-group">
                        <a href="{{ path('coreextra_slider_new') }}" class="btn btn-success btn-flat">
                            {{ "add.new" | trans }} <i class="ion-plus"></i>
                        </a>
                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover" id="sliders-table">
                    <thead>
                    <tr>
                        <th class="hidden-480">ID</th>
                        <th class="hidden-480">{{ "title" | trans }}</th>
                        <th class="hidden-480" style="width:180px">{{ "open.new.window" | trans }}</th>
                        <th class="hidden-480">{{ "URL" }}</th>
                        <th class="hidden-480">{{ "active" | trans }}</th>
                        <th class="hidden-480">{{ "order.sort" | trans }}</th>
                        <th style="width:70px;"></th>
                    </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
              </div>
          </div>
        </div>
      </div>
    </section>
 
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        var table_columns = [
            { "mData": "id" },
            {
                "mData": function (source) {
                    return '<a href="' + source.id + '">' + source.title + '</a>';
                }
            },
            {
                "mData": "openInNewWindow",
                "mRender": function(data) {
                    var code = '';

                    if (true == data) {
                        code = '<span class="label label-success">{{ "yes" | trans }}</span>';
                    } else {
                        code = '<span class="label label-important">{{ "no" | trans }}</span>';
                    }

                    return code;
                }
            },
            { "mData": "url" },
            {
                "mData": "active",
                "mRender": function(data) {
                    var code = '';

                    if (true == data) {
                        code = '<span class="label label-success">{{ "yes" | trans }}</span>';
                    } else {
                        code = '<span class="label label-important">{{ "no" | trans }}</span>';
                    }

                    return code;
                }
            },
            { "mData": "order" },
            {
                "mData": function(source) {
                    return '<a href="' + source.id + '/edit" class="btn btn-xs btn-flat btn-primary"><i class="ion-compose"></i> {{ "edit.singular" | trans }}</a> ';
                }
            }
        ];

        jQuery(document).ready(function() {

            TableManaged.init(
                '#sliders-table',
                '{{ url('coreextra_slider_listjson') }}',
                [3, 6],
                table_columns,
                '{{ url('admin_default_getdatatablesi18n', { language: app.request.locale }) }}');
        });
    </script>
{% endblock %}